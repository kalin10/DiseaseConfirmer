@model DiseaseConfirmer.Web.ViewModels.Inquiries.InquiriesCreateInputModel
@using DiseaseConfirmer.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<form method="post" asp-action="Add">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>

    <div>
        <label asp-for="Heading">Heading:</label>
        <textarea asp-for="Heading" class="form-control"></textarea>
        <span asp-validation-for="Heading" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Symptoms">Symptoms:</label>
        <textarea asp-for="Symptoms" class="form-control"></textarea>
        <span asp-validation-for="Symptoms" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DetailedInformation">Detailed Information: (Your opinion about what could have cause it, or your recent activities.)</label>
        <textarea asp-for="DetailedInformation" class="form-control"></textarea>
        <span asp-validation-for="DetailedInformation" class="text-danger"></span>
    </div>

    <div>
        <p></p>
        <button type="submit" class="btn btn-success">Submit</button>
    </div>

</form>