@using DiseaseConfirmer.Common
@model DiseaseConfirmer.Web.ViewModels.Inquiries.InquiryViewModel

@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
</div>

<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <div class="media-body ml-3">
                            <a><i class="fas fa-user"></i> @Model.UserUserName</a>
                        </div>
                        <div class="text-muted small ml-3">
                            <div><strong><i class="far fa-calendar-alt"></i> @Model.CreatedOn</strong></div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h3>@Model.Heading</h3>
                    <p><strong>Symptoms:</strong> @Model.Symptoms</p>
                    <p><strong>Things that can be ralated:</strong> @Model.DetailedInformation</p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <i class="fas fa-chevron-up"> Upvotes</i> 
                    <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="ion ion-md-create"></i>&nbsp;Comment</button> </div>
                </div>
            </div>
        </div>
    </div>
</div>